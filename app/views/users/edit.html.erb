<% provide(:title, "Edit user") %>

<div class="row">
 <!-- <div class="col-md-3 col-md-offset-4">-->
    <h1 class="line1"> <center> Edit profile </center></h1>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <center>
          <div style="margin-bottom: 25px;" class="  col-md-3 col-md-offset-0 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          </div>

          <div style="margin-bottom: 25px" class="col-md-3 col-md-offset-0 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
          </div>

          <div style="margin-bottom: 25px" class="col-md-3 col-md-offset-0 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div style="margin-bottom: 25px" class="col-md-3 col-md-offset-0 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div style="margin-bottom: 5px" class="col-md-3 col-md-offset-0 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
          </div>

          <div style="margin-bottom: 15px"  class=" glyphicon glyphicon-paperclip">
            <%= f.label :avatar, "Avatar:" %>
            <%= f.file_field :avatar%>
          </div>


          <%if current_user.super_admin? %>
              <div>
                <%= f.select :role_id, options_from_collection_for_select(Role.all, 'id', 'name')%>
              </div>
          <% end %>

          <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
        </center>


        <%if current_user.admin? %>
            <div style= "float:right;margin-right:30%;">
              <%= link_to 'Back', users_path, class: "btn btn-small btn-primary" %>
            </div>
        <%end%>

    <% end %>

</div>