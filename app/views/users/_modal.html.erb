<div id="loginModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit profile </h4>
      </div>
      <% provide(:title, "Edit user") %>
      <div class="modal-body">
            <%= form_for @user, remote: true, :html =>{ :class => 'form-horizontal', :multipart => true } do |f| %>
                <%= render 'shared/error_messages' %>

                <center>   <%= f.label :name %> </center>
                <center>   <%= f.text_field :name %> </center>

                <center>   <%= f.label :surname %> </center>
                <center>   <%= f.text_field :surname %> </center>

                <center>   <%= f.label :email %> </center>
                <center>   <%= f.text_field :email %> </center>

                <center>   <%= f.label :password %> </center>
                <center>   <%= f.password_field :password %> </center>

                <center>   <%= f.label :password_confirmation, "Confirm Password" %> </center>
                <center>   <%= f.password_field :password_confirmation %> </center>

                <br> <center>   <%= f.submit "Save changes", class: "btn btn-large btn-success" %> </center>
            <% end %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
      </div>
    </div>
  </div>
</div>